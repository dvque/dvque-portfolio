---
import { basics } from "cv.json";

import GitHub from "@/icons/GitHub.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import X from "@/icons/X.astro";

const { profiles } = basics;

const SOCIAL_ICONS = {
    GitHub,
    LinkedIn,
    X,
};

const profilesInfo = profiles.map(({ network, url }) => {
    const Icon = SOCIAL_ICONS[network as keyof typeof SOCIAL_ICONS];
    const firstLetter = network[0].toUpperCase();
    return {
        id: network,
        section: "Social",
        title: `${network} - ${url.replace("https://", "")}`,
        url,
        icon: `<svg 
    xmlns="http://www.w3.org/2000/svg"
    style="margin-right: 4px"
    class="icon icon-tabler icon-tabler-brand-github"
    width=20
    height=20
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
    ></path></svg
>`,
        hotKey: `ctrl+${firstLetter}`,
        handler: () => {
            window.open(url, "_blank");
        },
    };
});
---

<footer>
    Pulsa <kbd>Cmd</kbd> + <kbd>K</kbd> para abrir la paleta de comandos.
</footer>

<ninja-keys
    data-info={JSON.stringify(profilesInfo)}
    placeholder="Type to search..."
    hideBreadcrumbs></ninja-keys>

<script>
    import "ninja-keys";
    const ninja = document.querySelector("ninja-keys");

    if (ninja !== null) {
        const info = ninja?.getAttribute("data-info") ?? "[]";
        const parsedInfo = JSON.parse(info);

        const data = parsedInfo.map((item: any) => {
            return {
                ...item,
                hander: () => {
                    window.open(item.url, "_blank");
                },
            };
        });

        ninja.data = [
            {
                id: "Print",
                title: "Print",
                icon: `<svg style="margin-right: 4px" xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-printer" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 17h2a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h2" /><path d="M17 9v-4a2 2 0 0 0 -2 -2h-6a2 2 0 0 0 -2 2v4" /><path d="M7 13m0 2a2 2 0 0 1 2 -2h6a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2z" /></svg>`,
                hotkey: "ctrl+P",
                section: "Acciones",
                handler: () => {
                    window.print();
                },
            },
            ...data,
        ];
    }
</script>
<style>
    @media print {
        ninja-keys {
            display: none;
        }
    }

    footer {
        color: black;
        background: #fdfdfd;
        border-top: 1px solid #eee;
        position: fixed;
        bottom: 0px;
        width: 100%;
        padding-block: 8px;
        text-align: center;
    }

    kbd {
        background: #d6d6d6;
        padding: 2px 4px;
        border-radius: 4px;
        margin: 0 4px;
    }
</style>
