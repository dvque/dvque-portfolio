---
const { title } = Astro.props;
---

<section class="mx-auto w-full max-w-2xl space-y-8 print:space-y-6">
    <div class="flex items-center justify-between">
        <div class="flex-1 space-y-1.5">
            {title && <h2 class="text-xl font-bold">{title}</h2>}
            <slot />
        </div>
    </div>
</section>
